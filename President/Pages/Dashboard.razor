@page "/president"
@using System.Security.Claims
@using Project.Frontend.Shared.Model
@using Project.Frontend.Shared.Services

@layout PresidentLayout

@attribute [Authorize]

<h2 class="my-3 fw-bold">Pending Events:</h2>

@if (loading)
{
    <p class="text-center text-muted">Loading events</p>
}
else if (events.Count == 0)
{
    <p class="text-center text-muted">No pending events available</p>
}
else
{
    <div class="row g-3">
        @foreach (var _event in events)
        {
            var modalId = $"requirementsModal-{_event.Id}";

            <div class="col-lg-4 col-md-6">
                <div class="card h-100 border">

                    <div class="card-header">
                        <h5 class="card-title fw-bold h5 m-0">@_event.Name:</h5>
                    </div>
                    <div class="card-body d-flex flex-column">

                        <p class="mb-1 text-muted">
                            Date: @_event.Date.ToString("dd MMM yyyy")
                        </p>

                        <p class="mb-3 text-muted">
                            Status: @_event.Status
                        </p>

                        <div class="mt-auto d-flex gap-2">
                            <button class="btn btn-sm btn-outline-primary w-100"
                                    @onclick="() => EditEvent(_event.Id)">
                                Edit
                            </button>

                            <button class="btn btn-sm btn-outline-danger w-100"
                                    @onclick="() => DeleteEvent(_event)">
                                Delete
                            </button>
                        </div>

                        <button class="btn btn-sm btn-success mt-2 p-2"
                                data-bs-toggle="modal"
                                data-bs-target="#@modalId">
                            View Requirements
                        </button>
                    </div>
                </div>
            </div>

            <!-- Requirements Modal -->
            <div class="modal fade" id="@modalId" tabindex="-1">
                <div class="modal-dialog modal-lg modal-dialog-centered">
                    <div class="modal-content">

                        <div class="modal-header">
                            <h5 class="modal-title">
                                Requirements - @_event.Name
                            </h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>

                        <div class="modal-body">
                            @if (_event.Requirements?.Any() == true)
                            {
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Type</th>
                                            <th>Name</th>
                                            <th>Quantity</th>
                                            <th>Price</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var req in _event.Requirements)
                                        {
                                            <tr>
                                                <td>@req.Type</td>
                                                <td>@req.Name</td>
                                                <td>@req.Quantity</td>
                                                <td>@req.Price</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            }
                            else
                            {
                                <p class="text-muted text-center">
                                    No requirements available
                                </p>
                            }
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}



@inject SharedServices sharedServices
@inject EventServices eventServices
@inject IJSRuntime JS
@inject NavigationManager nav
@code {
    private string id = "";
    private bool loading = false;
    List<Event> events = new();

    protected override async Task OnInitializedAsync()
    {
        loading = true;
        var claims = await sharedServices.GetClaims();
        id = claims.Id;

        try
        {
            events = (await eventServices.GetPendingEvents(id))
            .OrderByDescending(e => e.Date.Date)
            .ToList();
        }
        catch (Exception ex)
        {
            Console.WriteLine("Error:", ex);
        }
        finally
        {
            loading = false;
        }
    }

    private void EditEvent(Guid id)
    {
        nav.NavigateTo($"president/event?id={id}");
    }


    private async Task DeleteEvent(Event @event)
    {

        bool confirmDelete =  await JS.InvokeAsync<bool>("confirm", $"Are you sure you want to delte {@event.Name}");

        if (confirmDelete)
        {
            var response = await eventServices.DeleteEvent(@event.Id);

            if (!response.Success)
            {
                await JS.InvokeVoidAsync("alert", $"Event not delete due to {response.Error}");
            }
            else
            {
                await JS.InvokeVoidAsync("alert", $"{@event.Name} has been deleted Successfully");
                await OnInitializedAsync();
            }
        }
    }
}